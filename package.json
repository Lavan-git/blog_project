{
  "name": "professional-mern-blog",
  "version": "1.0.0",
  "private": true,
  "description": "A professional full-stack blog application built with MERN stack",
  "type": "module",
  "packageManager": "npm@10.0.0",
  "workspaces": [
    "packages/backend",
    "packages/frontend",
    "packages/shared"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo run clean && del-cli node_modules .turbo"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@types/node": "^22.7.5",
    "@vercel/node": "^3.0.21",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "del-cli": "^6.0.0",
    "turbo": "^2.1.3",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "author": "Professional Developer",
  "license": "MIT",
  "keywords": [
    "mern",
    "blog",
    "typescript",
    "react",
    "express",
    "mongodb",
    "professional"
  ]
}
