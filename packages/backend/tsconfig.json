{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "../",                  // ðŸ‘ˆ changed (was ./src)
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "express"]
  },
  "include": [
    "src/**/*",
    "../shared/src/**/*"               // âœ… allowed now
  ],
  "exclude": ["node_modules", "dist"]
}
